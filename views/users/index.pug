extends ../layout/commom.pug

block content

	h1 User
		a.btn.btn-primary.ml-4(href="/user/create") New

	- var a = q;
	.d-flex.align-items-center
		form.ml-auto(action="/user/search" , method="GET", class="d-flex")
			input.form-control.mr-3(id="input" name="q" type="text" value=a) 
			button.btn.btn-primary Search	
	table.table
		tr
			th Name
			th Phone
			th Active
		tr
		each user in users
			tr
				td= user.name
				td= user.phone 
				td
					a.btn.btn-light(href="/user/"+ user.id) View

