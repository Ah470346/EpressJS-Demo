
extends ../layout/commom.pug

block content
	h1 Login	

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/auth/login", method="POST")
		.form-group
			label(for="name") Email
			input#email.form-control(name="email" ,type="text" ,value=values ? values.name : '')
		.form-group
			label(for="phone") Password
			input#password.form-control(name="password" ,type="password", value=values ? values.phone : '')

		button.btn.btn-primary Login